{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "rating-engine#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.py", "pyproject.toml", "uv.lock"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx", 
        "src/**/*.ts", 
        "test/**/*.ts", 
        "test/**/*.tsx", 
        "tests/**/*.py", 
        "src/**/*.py",
        "**/*.test.*",
        "**/*.spec.*"
      ]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
