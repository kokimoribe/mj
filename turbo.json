{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_SUPABASE_URL", "NEXT_PUBLIC_SUPABASE_ANON_KEY"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": [
        "src/**",
        "public/**",
        "next.config.*",
        "tailwind.config.*",
        "postcss.config.*",
        "package.json"
      ]
    },
    "rating-engine#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.py", "pyproject.toml", "uv.lock"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["//#install-deps"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**", "*.{js,ts,jsx,tsx,mjs}", "package.json"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["src/**", "*.{ts,tsx}", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "tests/**/*.py",
        "src/**/*.py",
        "**/*.test.*",
        "**/*.spec.*"
      ]
    },
    "clean": {
      "cache": false
    },
    "//#install-deps": {
      "cache": false,
      "inputs": [
        "package.json",
        "apps/*/package.json",
        "packages/*/package.json"
      ]
    }
  }
}
